<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Welcome to the Game!"
        android:padding="16dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/input1_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_textview"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="You entered the following text:"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/text_input1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input1_textview"
        android:textSize="18sp"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/input2_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_input1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="You entered the following number:"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/text_input2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input2_textview"
        android:textSize="18sp"
        android:padding="16dp"/>

</RelativeLayout>
